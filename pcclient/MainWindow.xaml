                    </Grid>
                </Border>
                <!-- Tweets TabControl -->
                <TabControl x:Name="TweetsPad" BorderThickness="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <TabItem x:Name="TweetsTab" BorderThickness="0" >
